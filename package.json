{
  "name": "shieldagent",
  "version": "0.1.0",
  "description": "AI Agent Security Scanner - Scan MCP servers for vulnerabilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shieldagent": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "security",
    "scanner",
    "ai-agent",
    "vulnerability",
    "tool-poisoning",
    "command-injection",
    "owasp"
  ],
  "author": "omer-yehuda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omer-yehuda/shieldagent.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "crypto-js": "^4.2.0",
    "ora": "^9.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "ts-morph": "^27.0.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
